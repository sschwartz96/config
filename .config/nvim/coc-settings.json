{
	"languageserver": {
		"golang": {
			"command": "gopls",
			"rootPatterns": ["go.mod", ".vim/", ".git/", ".hg/"],
			"filetypes": ["go"],
			"initializationOptions": {
				"usePlaceholders": true,
				"completeUnimported": true
			}
		}
	},

	"suggest.noselect": false,
	"html.filetypes": [
		"html",
		"handlebars",
		"gohtml"
	],
	"html.format.enable": true
}

