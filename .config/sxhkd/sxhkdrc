# reload sxhkd config
ctrl + shift + r
	killall -SIGUSR1 sxhkd 

# sleep
super + shift + s
	snooze

# 
# bspc bindings
#

# exit bspc
super + shift + {q,r}
	bspc {quit 1, wm -r}

## close focused window
super + shift + c
	bspc node -c

## start browser
super + shift + w
	$BROWSER

super + shift + m
	clementine

super + shift + v
	kdenlive


###
#
# bspwm
#
###

# desktop focus
super + {1-3}
	bspc desktop -f {1-3}

super + {7-9}
	bspc desktop -f {7-9}

# desktop move node
super + shift + {1-6}
	bspc node -d \^{1-6} --follow 

# focus the node in the given direction
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

# focus the next/previous desktop in the current monitor
super + bracket{left,right}
	bspc desktop -f {prev,next}.local

# focus next/previous monitor
super + {_,shift} {comma, period}
	bspc {monitor -f,node -m} {prev,next}

# swap current node with the biggest
super + Return {
	bspc node -s biggest
}

# toggle fullscreen of current node
super + f
	bspc node --state \~fullscreen

# resize 10 pixels top or bottom
super + ctrl + {j,k}
	bspc node --resize bottom 0 {-40,40}

# resize 10 pixels right or left 
super + ctrl + {h,l}
	bspc node --resize left {-40,40} 0

# END bspc bindings


# Brightness

XF86MonBrightnessUp
	brightness +5%

XF86MonBrightnessDown
	brightness -5%

ctrl + Down
	brightness 1


# Volume
XF86AudioRaiseVolume
	volume +5

XF86AudioLowerVolume
	volume -5


# playerctl
XF86AudioPlay
	media play-pause

super + Down
	media pause

super + Up
	media play

super + Left
	media previous

super + Right 
	media next

ctrl + shift + 0
	/home/sam/bin/switch_audio.sh 0

ctrl + shift + 1
	/home/sam/bin/switch_audio.sh 1

###
#
# programs
#
###

# edit config script
super + e
	~/scripts/edit_config/edit_config.sh

# media player
super + m
	MellowPlayer

# start rofi
super + p
	rofi -show run

# start terminal
super + shift + Return
	alacritty

# screen shot select
super + Print 
	sleep 0.25 && scrot -selection
